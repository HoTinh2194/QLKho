@model QL_Kho.Models.Mathang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN MẶT HÀNG CẦN XÓA</h2>

<h3 style=" color:red">Bạn có chắc muốn xóa không?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã mặt hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaMH)
        </dd>

        <dt>
           Tên mặt hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenMH)
        </dd>

        <dt>
            Loại hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai)
        </dd>

        <dt>
           Số lượng

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
           Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dongia)
        </dd>
        @if (TempData["LoiXoaSach"] != null)
        {
            <h3 style="color:red; text-align:center">@TempData["LoiXoaSach"] </h3>
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

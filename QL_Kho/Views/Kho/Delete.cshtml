@model QL_Kho.Models.KhoHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>XÁC NHẬN XÓA THÔNG TIN KHO HÀNG</h2>

<h3 style=" color:red">
    Bạn có chắc chắn xóa không ?
</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã kho:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKH)
        </dd>
        <dt>
           Tên kho:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKH)
        </dd>

        <dt>
           Nhân viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNV)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>

        <dt>
           Địa điểm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDD)
        </dd>

        <dt>
           Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
           Loại hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai)
        </dd>
        @if (TempData["LoiXoaSach"] != null)
        {
            <h3 style="color:red; text-align:center">@TempData["LoiXoaSach"] </h3>
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
